    <title>Desafio da Loja</title>
    <link rel="stylesheet" href="/stylesheets/index.css" />
  </head>
  <body>
    <header>
      <div class="separa-menu">
        <img
          class="logo-menu"
          src="/images/logodt3.png"
          alt="Logo da empresa"
        />
      </div>
      <nav id="menu-header">
        <ul>
          <li><a href="#"> Home </a></li>
          <li><a href="#"> Suporte </a></li>
          <li><a href="#"> Empresa </a></li>
        </ul>
      </nav>
    </header>

    <main>
      <div class="grade">
        <div class="grade-item">
          <img
            class="card-img"
            src="images/Cadeira-Gamer-DT3sports-Spider-28-2-1440x1440.jpg"
            alt="cadeira spider"
          />
          <div class="card-conteudo">
            <h3><%= produto1.name %></h3>
            <p><%= produto1.description %></p>
            <p><em>R$<%= produto1.price %>,00</em></p>
          </div>
        </div>
        <div class="grade-item">
          <img
            class="card-img"
            src="images/GTI-red-2-2-1440x1440.jpg"
            alt="cadeira GTI red"
          />
          <div class="card-conteudo">
            <h3><%= produto2.name %></h3>
            <p><%= produto2.description %></p>
            <p><em>R$<%= produto2.price %>,00</em></p>
          </div>
        </div>
        <div class="grade-item">
          <img
            class="card-img"
            src="/images/GTX-Red-12.jpg"
            alt="cadeira GTX red"
          />
          <div class="card-conteudo">
            <h3><%= produto3.name %></h3>
            <p><%= produto3.description %></p>
            <p><em>R$<%= produto3.price %>,00</em></p>
          </div>
        </div>
      </div>
    </main>

    <footer>
      <div class="container-footer">
        <div class="containers">
          <div class="logo-config">
            <img
              class="logo-footer"
              src="images/logodt3.png"
              alt="Logo da Pagina"
            />
            <p><strong>Contato</strong></p>
            <p>Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
            <p>
              Rua Lauro Müller, 116 - Botafogo, Rio de Janeiro - RJ, 22290-160
            </p>
          </div>

          <div class="segundo">
            <nav class="conteudo">
              <ul>
                <strong>Informações</strong>
                <li><a href="#">AJUDA</a></li>
                <li><a href="#">TERMO DE USO</a></li>
                <li><a href="#">POLÍTICA DE PRIVACIDADE</a></li>
                <li><a href="#">ACEITE</a></li>
                <li><a href="#">NEWS LETTER</a></li>
                <li><a href="#">PROMOÇÕES</a></li>
              </ul>
            </nav>
          </div>
          <div class="terceiro">
            <ul>
              <strong>Outros Links</strong>
              <li>Link 1</li>
              <li>Link 2</li>
              <li>Link 3</li>
              <li>Link 4</li>
